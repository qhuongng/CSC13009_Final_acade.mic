<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Academic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/midnightGreen</item>
        <item name="colorPrimaryDark">@color/midnightGreen</item>
        <item name="rippleColor">@color/disabledDarkGray</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">@color/midnightGreen</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme.TransparentToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize the toolbar background color -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Academic" parent="Base.Theme.Academic" />

    <style name="TextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxStrokeColor">@color/strokeColor</item>

        <item name="boxCornerRadiusBottomStart">26dp</item>
        <item name="boxCornerRadiusBottomEnd">26dp</item>
        <item name="boxCornerRadiusTopStart">26dp</item>
        <item name="boxCornerRadiusTopEnd">26dp</item>
    </style>

    <style name="AlarmTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxStrokeColor">@color/strokeColor</item>

        <item name="boxCornerRadiusBottomStart">26dp</item>
        <item name="boxCornerRadiusBottomEnd">26dp</item>
        <item name="boxCornerRadiusTopStart">26dp</item>
        <item name="boxCornerRadiusTopEnd">26dp</item>
    </style>

    <style name="SearchInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginHorizontal">26dp</item>

        <item name="boxCornerRadiusBottomStart">36dp</item>
        <item name="boxCornerRadiusBottomEnd">36dp</item>
        <item name="boxCornerRadiusTopStart">36dp</item>
        <item name="boxCornerRadiusTopEnd">36dp</item>

        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <style name="Theme.Academic.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Academic.AppWidgetContainer" parent="Theme.Academic.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>