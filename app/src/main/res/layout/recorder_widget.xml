<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Academic.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Academic.AppWidgetContainer"
    >

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.Academic.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="00:00"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:text="NOT RECORDING"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/status"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_gravity="center_vertical"
        android:id="@+id/widget_play_btn"
        android:textSize="15sp"
        android:text="Play"
        android:visibility="visible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_gravity="center_vertical"
        android:id="@+id/widget_pause_btn"
        android:textSize="15sp"
        android:text="Pause"
        android:visibility="gone"
        />

</LinearLayout>